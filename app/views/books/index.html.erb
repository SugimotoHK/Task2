<h1>Books</h1>

<% @books.each do |book| %>

<p>Title</p>
<span><%= book.title %></span>

<p>Body</p>
<span><%= book.body %></span>

<span>
    <%= link_to book.title, book_path(book.id) %>
</span>

<% end %>

<% link_to "show", show_book_path(@book.id) %>
<%= link_to "edit", edit_list_path(@book.id) %>
<%= link_to "destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>